-- Lista de IDs de usuarios prohibidos (blacklist)
local blacklist = {
    6166334645, -- Moote LugarMoote
    7067339610, -- iLoveMyLittlesWolf
    4184174996, -- Draco KTP
    853655872,  -- Folbox KTP
    7880715651,  -- ddanoel15_chico
}

-- Función para verificar si un jugador está en la lista negra
local function isPlayerInBlacklist(player)
    for _, id in ipairs(blacklist) do
        if player.UserId == id then
            return true
        end
    end
    return false
end

-- Función que se ejecuta cuando un jugador se une al juego
local function onPlayerAdded(player)
    if isPlayerInBlacklist(player) then
        print(player.Name .. " está en la lista negra. Expulsado del juego.")
        player:Kick("Estás baneado de este servidor.")
    end
end

-- Conecta la función al evento de jugador agregado
game.Players.PlayerAdded:Connect(onPlayerAdded)

-- Expulsa a los jugadores que ya están en el servidor cuando se ejecuta el script
for _, player in ipairs(game.Players:GetPlayers()) do
    if isPlayerInBlacklist(player) then
        print(player.Name .. " está en la lista negra. Expulsado del juego.")
        player:Kick("Estás baneado de este servidor.")
    end
end
